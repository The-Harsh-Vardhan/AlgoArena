[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    01_Tabular_Data,
    Extras,
    .github
ignore = 
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    E203,  # whitespace before ':'
    E402,  # module level import not at top of file
per-file-ignores =
    __init__.py:F401
